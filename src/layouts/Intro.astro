---

import { Image } from "astro:assets";

// Images/Icons
import mainImage from "@images/intro-section/main.jpg";

// Components
import MainButton from "@components/Main-button.astro";
import ButtonArrow from "@components/Button-arrow.astro";

---

<!-- Main page Intro section -->
<section id="intro">
  <div class="container">
    <div class="vertical_align">
     <main class="intro__inner">
        <div class="intro__inner-info">
          <h1 class="intro__inner-info-title">Speed up onboarding with swift KYC in Kazakhstan ðŸ‡°ðŸ‡¿</h1>
          <div class="intro__inner-info-text">
            <p>
              Experience KYCAID's rapid real-time KYC services for Kazakhstan. As your trusted partner, KYCAID ensures swift, secure user onboarding with its quick verification process.
            </p>
            <p>Say hello to seamless KYC compliance!</p>
          </div>
          <MainButton>
            Book a demo
            <ButtonArrow />
          </MainButton>
        </div>
        <Image class="intro__inner-image" src={mainImage} alt="main image" />
      </main>
    </div>
  </div>
</section>

<style lang="scss">
.intro__inner-info-title {
  font-size: clamp(30px, 4vw, 56px);
  font-weight: 700;
  max-width: 100%;
  line-height: 1.2;
  color: #111;

  position: relative;
  z-index: 0;

  &::before {
    content: "";
    position: absolute;
    top: -160px;
    left: -250px;
    width: 430px;
    height: 430px;
    background: url("../images/intro-section/bg-blur.png") no-repeat center;
    z-index: -1;
  }
}
.intro__inner {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 48px;
}
.intro__inner-info-text {
  position: relative;
  margin: 32px 0;
  z-index: 0;

  p {
    font-weight: 400;
    max-width: 100%;
    text-align: left;
    color: #595D62;
  }

  p:first-of-type {
    margin-bottom: 22px;
  }
}
.intro__inner-image {
  border-radius: 24px;
  width: clamp(300px, 39vw, 500px);
}

@media screen and (max-width: 768px) {
    .intro__inner {
      flex-direction: column;
      padding-top: 40px;
      padding-bottom: 32px;
    }
    .intro__inner-image {
      width: 100%;
      height: 100%;
    }
    .intro__inner-info-text {
      margin: 24px 0 32px;
    }
}

</style>